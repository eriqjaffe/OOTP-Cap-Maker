{
  "name": "capmaker",
  "productName": "OOTP Cap Maker",
  "version": "0.4.0",
  "description": "OOTP Cap Maker",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": {
    "name": "Eriq Jaffe",
    "email": "eriqjaffe@gmail.com",
    "url": "https://github.com/eriqjaffe/OOTP-Cap-Maker"
  },
  "license": "ISC",
  "dependencies": {
    "archiver": "^5.3.0",
    "body-parser": "^1.19.2",
    "electron-store": "^8.0.1",
    "express": "^4.17.3",
    "imagemagick-cli": "^0.5.0",
    "jimp": "^0.16.1",
    "ttfinfo": "^0.2.0"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.ootputilities.capmakermul",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "portable": {
      "artifactName": "${productName}_${version}_portable.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "artifactName": "${productName} ${version} setup.${ext}",
      "menuCategory": "OOTP Utilities",
      "shortcutName": "${productName}",
      "include": "build/installer.nsh",
      "uninstallDisplayName": "${productName} ${version}",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "deb",
        "rpm"
      ]
    },
    "deb": {}
  },
  "packageManager": "yarn@1.22.22"
}
